<Window x:Class="Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:visualizer="clr-namespace:Visualizer"
		Loaded="{visualizer:MethodBinding Loaded}"
        Title="BumbleBee Visualizer" Height="350" Width="525">
	<Window.DataContext>
		<visualizer:MainWindowViewModel/>
	</Window.DataContext>
	
    <Grid>
		<ComboBox ItemsSource="{Binding Path=PortSource}" SelectedItem="{Binding SelectedPort, UpdateSourceTrigger=PropertyChanged}"
			HorizontalAlignment="Left" Margin="21,22,0,0" VerticalAlignment="Top" Width="120"/>

	</Grid>
</Window>
